{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
<style>
    .form-change-password {
        max-width: 400px;
        padding: 15px;
        margin: auto;
    }

    .form-change-password .form-control {
        position: relative;
        box-sizing: border-box;
        height: auto;
        padding: 10px;
        font-size: 16px;
    }

    .form-change-password input[type="password"] {
        margin-bottom: 10px;
    }

    .form-change-password input[type="password"]:focus {
        z-index: 2;
    }

    .beige-section {
        background-color: #f5f5dc; /* Couleur de fond beige */
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }
</style>

<div class="container mt-5 beige-section">
    <form class="form-change-password" method="post">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Changer le mot de passe</button>
        {{ form_end(form) }}
    </form>
</div>
{% endblock %}
