{% extends 'base.html.twig' %}

{% block title %}
Sous-Catégories de {{ categorie.nom }}
{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Sous-Catégories de {{ categorie.nom }}</h1>
    <div class="row">
        {% for sousCategorie in sousCategories %}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card">
                    <img src="{{ asset('/img/default-category.jpg') }}" class="card-img-top" alt="{{ sousCategorie.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ sousCategorie.nom }}</h5>
                        <a href="{{ path('app_produits', {'id': sousCategorie.id}) }}" class="btn btn-primary">Voir les Produits</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
