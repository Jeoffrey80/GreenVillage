{# templates/catalogue/categorie.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Toutes les Catégories{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Toutes les Catégories</h1>
    <div class="row">
        {% for categorie in categories %}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card">
                    <img src="{{ asset('../assets/img/Categorie/' ~ categorie.image ) }}" class="card-img-top" alt="mm{{ categorie.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ categorie.nom }}</h5>
                        <a href="{{ path('app_sous_categories', {'id': categorie.id}) }}" class="btn btn-primary">Voir les Sous-Catégories</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
