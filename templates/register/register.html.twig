{# templates/registration/register.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5 mb-5">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Inscription</h2>

                        {{ form_errors(registrationForm) }}
                        {{ form_start(registrationForm) }}

                        <div class="mb-3">
                            {{ form_row(registrationForm.adresse_mail, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer mot de passe'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.adresse_livraison, {'attr': {'class': 'form-control', 'placeholder': 'Adresse de livraison'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.adresse_facturation, {'attr': {'class': 'form-control', 'placeholder': 'Adresse de facturation'}}) }}
                        </div>
                        <div class="mb-3 form-check">
                            {{ form_row(registrationForm.type_client, {'label': 'Je suis un professionnel', 'attr': {'class': 'form-check-input'}}) }}
                        </div>
                        <div class="mb-3 form-check">
                            {{ form_row(registrationForm.RGPDConsent, {'label': 'Je consens aux termes et conditions', 'attr': {'class': 'form-check-input'}}) }}
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg btn-block">Je m'inscris</button>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>
                <p class="mt-3 text-center">Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous ici</a></p>
            </div>
        </div>
    </div>
{% endblock %}
