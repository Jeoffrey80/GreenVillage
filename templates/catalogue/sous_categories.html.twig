{# templates/catalogue/sous_categories.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    Sous-Catégories de {{ categorie.nom }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card-img-top {
            width: 100%; /* Ajuste l'image pour qu'elle prenne toute la largeur de la carte */
            height: 200px; /* Hauteur fixe pour toutes les images */
            object-fit: cover; /* Recadre l'image pour qu'elle s'ajuste bien dans le cadre */
            border-radius: 10px; /* Coins arrondis */
        }

        .beige-section {
            background-color: #f5f5dc; /* Couleur de fond beige */
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        /* Fixe le footer en bas de la page */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            flex: 1;
        }

        .footer {
            background-color: #f5f5f5;
            padding: 20px;
            text-align: center;
            width: 100%;
            position: fixed;
            bottom: 0;
            left: 0;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4 beige-section">
    <h1>Sous-Catégories de {{ categorie.nom }}</h1>
    <div class="row">
        {% for sousCategorie in sousCategories %}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card">
                    <img src="{{ asset(sousCategorie.image) }}" class="card-img-top" alt="{{ sousCategorie.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ sousCategorie.nom }}</h5>
                        <a href="{{ path('app_produits', {'id': sousCategorie.id}) }}" class="btn btn-primary">Voir les Produits</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<div class="footer">
    <p>&copy; {{ "now"|date("Y") }} Village Green. Tous droits réservés.</p>
</div>
{% endblock %}
