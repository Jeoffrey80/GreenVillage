{% extends 'base.html.twig' %}

{% block title %}Modifier un commercial{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Modifier un commercial</h1>
        <div class="card my-5">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.nom, 'Nom') }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.role, 'RÃ´le') }}
